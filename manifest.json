{
  "manifest_version": 3,
  "name": "CustomGPT",
  "version": "1.0",
  "description": "Change your GPT's Background!",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.openai.com/*"],
      "js": ["content_script.js"]
    }
  ],
  "host_permissions": [
    "*://chat.openai.com/*"
  ]
}
